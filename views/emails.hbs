<h1>{{title}}</h1>
<a href="/emails/add" class="btn btn-success mb-3">Add New Template</a>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Title</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each emails}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.title}}</td>
                <td>{{formatDate this.createdAt}}</td>
                <td>
                    <a href="/emails/edit/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="4" class="text-center">No email templates found.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>